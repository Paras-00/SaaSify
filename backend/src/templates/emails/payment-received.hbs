          <tr>
            <td style="background-color:#087d51;padding:48px 40px;text-align:center;">
              <table cellpadding="0" cellspacing="0" style="margin:0 auto;">
                <tr>
                  <td
                    style="background-color:rgba(255,255,255,0.2);border-radius:12px;width:44px;height:44px;text-align:center;vertical-align:middle;">
                    <span style="color:#ffffff;font-weight:700;font-size:24px;line-height:44px;">S</span>
                  </td>
                  <td style="padding-left:14px;">
                    <span
                      style="color:#ffffff;font-size:26px;font-weight:700;letter-spacing:-0.5px;">{{companyName}}</span>
                  </td>
                </tr>
              </table>
              <div style="margin-top:20px;color:rgba(255,255,255,0.9);font-size:16px;">Payment Confirmation</div>
            </td>
          </tr>

          <!-- Content Body -->
          <tr>
            <td style="padding:56px 48px;background-color:#ffffff;">
              <h2
                style="color:#111827;margin:0 0 16px 0;font-size:28px;font-weight:700;letter-spacing:-0.8px;line-height:1.2;">
